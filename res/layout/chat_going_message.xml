<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:padding="6dp" >
	
	    <RelativeLayout
	        android:id="@+id/rlChatContent"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp"
	        android:layout_marginRight="5dp" >
	        
	       <ImageView 
	           android:id="@+id/ivRiderImage" 
	           android:layout_width="52dp"
		       android:layout_height="52dp"
	           android:focusable="false" 
	           android:layout_alignParentRight="true" 
               android:layout_alignParentTop="true" 
	           android:background="@drawable/ic_rider_default"/>
 				
 		   <TextView 
	           android:id="@+id/tvChatMessage" 
	           android:layout_toLeftOf="@id/ivRiderImage"
	           android:layout_marginRight="10dp"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:background="@drawable/chat_going_background" 
	           android:textSize="15sp"
	           android:textColor="#ff000000"
	           android:gravity="left|center"
	           android:minHeight="50dp" 
	           android:lineSpacingExtra="2dp"
	           android:clickable="true"
               android:focusable="true"/>   
	                 
	                  
	       <TextView 
	           android:id="@+id/tvChatName" 
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_below="@id/ivRiderImage"
	           android:layout_alignParentRight="true"
	           android:layout_toRightOf="@id/tvChatMessage"
	           android:textSize="15sp"
	           android:gravity="center"
	           android:textColor="#818181"/>

	       <TextView
	           android:id="@+id/tvChatTime"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_alignLeft="@+id/tvChatMessage"
	           android:layout_below="@+id/tvChatMessage"
	           android:layout_marginLeft="10dp"
         	   style="@style/chatTime"/>
	       	       	        
	    </RelativeLayout>

